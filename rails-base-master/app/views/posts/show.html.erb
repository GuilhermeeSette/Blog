<p id="notice"><%= notice %></p>
<div class="text-center">
  <div class="container-fluid main main-posts">
    <div class="row text-center">
      <div class="col-md-2">
        <div class="panel" style="width: 20rem;">
          <div class="panel-body">
            <h5 class="font-weight-bold mb-3 upvote-title">Curtidas</h5>
            <p>199 <a><%= link_to fa_icon(:star), home_index_path %></a></p>
          </div>
        </div>
      </div>
      <div class="col-md-10 post text-justify">
        <div class="">
          <h2 class="post-title"><%= @post.title %></h2>
        </div>
        <hr>
        <div >
          <p class="post-autor"> <%= @post.autor %></p>
        </div>
        <div >
          <p class="post-date"><%= TimeDifference.between(@post.created_at, Time.now).in_days.round%> dias atrás</p>
        </div>
        <hr>
        <div class="col-md-8">
          <div >
            <p class=""><%= simple_format(h(@post.content), class: "post-body") %></p>
          </div>
          <span>
            <%= raw @post.tags.map { |tag| link_to tag.name, tag_path(tag), class: "label label-info tag-label" }.join(' ') %>
          </span>
        </div>
        <div class="col-md-12">

        </div>
        <div class="col-md-6">

          <%= form_for(:comment, url: comments_path) do |form| %>
          <div class="container">
            <div class="row form">
              <div class="col-md-8">
                <form class="text-center">
                  <h2>Deixe um comentário<span><%= fa_icon(:comments) %></span></h2>
                  <div class="form-group">
                    <%= form.text_area :body,placeholder: "Conteúdo", rows: 5,class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= form.text_field :author,placeholder: "Autor", class: "form-control" %>
                    <%= form.hidden_field :parent_comment_id, value: @post.id %>
                  </div>
                  <div class="">
                    <%= form.submit 'Comentar',value:"Comentar", class: "btn btn-info" %>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% end %>
          <br>
          <div class="row">
            <div class="container">
              <div class="row">
                <div class="col-md-12">
                  <h2>Comentários<span class="text-muted pull-right"><%= @post.comments.count %> Comentários</span></h2>
                </div>
              </div>
              <ul id="comments">
                <%= render partial: 'comments/comment', collection:  @post.comments %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <hr>
    </div>
  </div>
