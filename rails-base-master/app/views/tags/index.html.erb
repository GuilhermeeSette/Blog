<div class="container-fluid">
  <div class="row">
    <div class="row search-bar">
      <div class="form-group col-md-4 ">
        <%= form_tag(tags_path, method: :get) do %>
        <div class="col-md-8 pull-left">
          <%= text_field_tag 'name', nil, placeholder: 'Proucure por uma tag...', class: "form-control " %>
        </div>
        <div class = "pull-left">
          <%= button_tag fa_icon(:search), class: "btn btn-default"%>
        </div>
        <% end %>
      </div>
    </div>
    <div class="tags">
      <% @tag.each do |tag| %>
      <div class="panel panel-default tag col-md-2 pull-left">
        <span >
          <%= link_to tag.name, posts_path(tags_ids: [params[:tags_ids], tag.id].compact.join(', '), search: params[:search]), class: " label label-info tag-label"%>
        </span>
        <p class="panel-body">Utilize esta tag quando a pergunta se refere a algum recurso, informação ou problema relacionado exclusivamente à <%= tag.name %></p>
      </div>
      <% end %>
    </div>
  </div>

  <nav>
    <%= paginate @tag,  outer_window: 3, class: "pagination" %>
  </nav>
</div>
