<%= form_for(@user) do |form| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="container">
  <div class="row form login">
    <div class="col-md-12">
      <form class="text-center">
        <legend>Novo usuário</legend>
        <div class="form-group">
          <%= form.label :Usuário %>
          <%= form.text_field :name,placeholder: "Nome...", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :Senha %>
          <%= form.password_field :password,placeholder: "Senha...", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label 'Confirme a senha' %>
          <%= form.password_field :password_confirmation,placeholder: "Senha...", class: "form-control" %>
        </div>
        <div class="button">
          <%= form.submit 'Cadastrar-se', class: "btn btn-info" %>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>
